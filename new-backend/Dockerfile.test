# Base image
FROM node:18

# Create app directory
WORKDIR /usr/src/app

COPY package.json yarn.lock ./

# Install app dependencies
RUN yarn

# Bundle app source
COPY . .

RUN npx prisma generate

# Creates a "dist" folder with the production build
RUN yarn build

EXPOSE 3333

# Start the server using the production build
CMD ["yarn", "start:prod"]
