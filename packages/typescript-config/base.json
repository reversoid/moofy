{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
     "lib": ["esnext"],
     "module": "ESNext",
     "target": "esnext",
     "moduleResolution": "Bundler",

     "allowImportingTsExtensions": true,
     "noEmit": true,
 
     "strict": true,
     "skipLibCheck": true,
     "esModuleInterop": true,
     "allowJs": false,
     "forceConsistentCasingInFileNames": true,
     "isolatedModules": true,
 
     "resolveJsonModule": true
  }
}
